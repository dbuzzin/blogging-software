<% include ./partials/header %>

<meta property="og:type"        content="article:test" />
<meta property="og:title"       content="<%= post.title.titleCase() %>" />
<meta property="og:description" content="<%- post.body.substring(0, 50) %>" />

<div class="ui main very padded text w-70 segment">

    <h1><%= post.title.titleCase() %></h1>

    <p><%- post.body %></p>

    <div>
        <a href="/posts/<%= post._id %>/edit">
            <button class="ui button orange">Edit</button>
        </a>
        <form class="ib" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <button class="ui button red">Delete</button>
        </form>
        <div class="fl-r">
            <button id="likeBtn" class="ui button">Like <span id="likeNum"><%= post.likes %></span></button>
            <button id="dislikeBtn" class="ui button">Dislike <span id="dislikeNum"><%= post.dislikes %></span></button>
        </div>
    </div>

