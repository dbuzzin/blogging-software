<% include ./partials/header %>

<div class="ui main text w-70 segment">

    <form id="newPost" class="ui form" autocomplete="off" action="/posts/new" method="POST">

        <div class="field">
            <input type="text" name="post[title]" placeholder="Title" required/>
        </div>

        <div class="field">
            <div class="div-input" type="text">
                <input class="tag-input" type="text" placeholder="Add Tag..."/>
                <input id="hiddenTag" type="hidden" name="post[tags]"/>
            </div>
        </div>

        <div class="field">
            <textarea name="post[body]" placeholder="What do you have to say..." required></textarea>
        </div>

        <button class="ui primary button">Post</button>

    </form>

</div>

<script src="/js/tag-input.js"></script>

<% include ./partials/footer %>